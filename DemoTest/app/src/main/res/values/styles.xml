<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/statusbar_green</item>
        <item name="colorPrimaryDark">@color/actionbar_green</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppGrayTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/statusbar_gray</item>
        <item name="colorPrimaryDark">@color/actionbar_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="OverLayAppTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/OverLayAppTheme.ActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="OverLayAppTheme.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundStacked">@android:color/transparent</item>
        <item name="android:displayOptions">showTitle</item>
    </style>


</resources>
